@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Sections below from http://html5up.net template "Spectral"-->

<!-- Banner -->
<section id="banner">
    <div class="inner">
        <h2>Widget</h2>
        <p>
            A new way to do.
            <br />
            A new way to be.
        </p>
    </div>
    <p><a href="#reason-one" class="more scrolly scrollVertBaseline">Learn More</a></p>
</section>

<section id="reason-one" class="wrapper style1 spotlight">
        <div class="column content normal">
            <h2>Putting power at your fingertips.</h2>
            <p>With the new Ion Core technology, Widget is a powerhouse of processing.</p>
        </div>
        
        <div class="image normal"><img src="~/images/reason_one_leaf.jpg"/></div>
</section>

<section id="reason-two" class="wrapper style2 spotlight">
        <div class="image switch">
            <img src="~/images/reason_two_rose.jpg"/>
        </div>

        <div class="column content switch">
            <h2>Clarity beyond compare.</h2>
            <p>Life-like resolution from the Iris Chip, as if the picture is in front of you.</p>
        </div>
</section>

<section id="reason-three" class="wrapper style3 spotlight">
        <div class="column content normal">
            <h2>Any time, any place.</h2>
            <p>Take Widget anywhere with you, with its sleek, portable design.</p>
        </div>

        <div class="image normal">
            <img src="~/images/reason_three_lavaredo.jpg"/>
        </div>
</section>

